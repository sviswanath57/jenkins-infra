pipeline {
    agent {
        node{
            label 'AGENT'
        }
    }
    parameters {
        string(name: 'PERSON', defaultValue: 'Mr Jenkins', description: 'Who should I say hello to?')

        text(name: 'BIOGRAPHY', defaultValue: '', description: 'Enter some information about the person')

        booleanParam(name: 'TOGGLE', defaultValue: true, description: 'Toggle this value')

        choice(name: 'CHOICE', choices: ['One', 'Two', 'Three'], description: 'Pick something')

        //password(name: 'PASSWORD', defaultValue: 'SECRET', description: 'Enter a password')
    }
    environment{
        GREETING = 'Hello viswanath you are very good'
    }
    options{
        timeout(time: 1, unit: 'HOURS')
        disableConcurrentBuilds()
    }
    // Build
    stages {
        stage('Build') {
            steps {
                echo 'Building..viswaa'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
        stage ('viswa-devops'){
            steps {
                echo "viswanath you are the next devops engineer in couple of days be ready"
            }
        }
        stage('viswa-devops1') {
            steps {
                echo "viswanath you are the next devops engineer in couple of days be ready hero"
            }
        }
        stage('shell scripting'){
            steps{
                sh '''
                    echo 'its running under shell build stage'
                    echo "$GREETING"
                    sleep 10
                '''
            }
        }
        stage ('parameter-checks') {
            steps {
                echo "Hello ${params.PERSON} ${params.PERSON}"

                echo "Biography: ${params.BIOGRAPHY}"

                echo "Toggle: ${params.TOGGLE}"

                echo "Choice: ${params.CHOICE}"

                //echo "Password: ${params.PASSWORD}"
            }
        }
    }
    // Post Bunoild
    post{
        always {
            echo 'always run this in any conditionss'
        }

        failure{
            echo 'the build is getting failed'
        }

        success{
            echo 'i will give output when build pipeline success'
        }
    }
}